---
import { cn } from "@/lib/cn"

const links = [
  { title: "Events", href: "/", active: Astro.url.pathname === "/" },
  {
    title: "Newsletter",
    href: "/newsletter",
    active: Astro.url.pathname.match(/\/newsletter\/?$/),
  },
]
---

<nav class="mx-auto mb-8 w-max">
  <ul
    role="group"
    class="grid grid-flow-col auto-cols-fr px-1 py-1 border rounded-full bg-white uppercase text-sm tracking-wide"
  >
    {
      links.map((link) => (
        <a
          href={link.href}
          class={cn(
            "text-center hover:text-gray-900 p-1 px-4 rounded-full ",
            link.active ? "bg-stone-100" : "hover:bg-zinc-100",
          )}
        >
          <li>{link.title}</li>
        </a>
      ))
    }
  </ul>
</nav>

